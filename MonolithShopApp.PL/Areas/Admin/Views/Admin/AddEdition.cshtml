@using EdProject.BLL.Models.Editions
@using EdProject.DAL.Entities.Enums
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateEditionModel
@{
    ViewData["Title"] = "Add Edition";
}

<form class="form-group" asp-action="AddEdition" asp-controller="Admin"
      asp-route-Name="Name" asp-route-id="Id" method="post">
    <input type="text" asp-for="Id" style="display: none" /><br />
    <label asp-for="Title"></label><br />
    <input type="text" asp-for="Title" /><br />
    <label asp-for="Description"></label><br />
    <input type="text" asp-for="Description" /><br />
    <label asp-for="Price"></label><br />
    <input asp-for="Price" /><br />
    <label asp-for="Currency"></label><br />
    @*<input type="text" asp-for="Currency" /><br />*@
    <select asp-for="Currency" asp-items="Html.GetEnumSelectList<CurrencyTypes>()"></select>
    <label asp-for="Status"></label><br />
    @*<input type="text" asp-for="Status" /><br />*@
    <select asp-for="Status" asp-items="Html.GetEnumSelectList<AvailableStatusType>()"></select>
    <label asp-for="Type"></label><br />
    @*<input type="text" asp-for="Type" /><br />*@
    <select asp-for="Type" asp-items="Html.GetEnumSelectList<EditionTypes>()"></select>
    <button type="submit">Add Editon</button>
</form>
